# Database
# For docker-compose.dev.yml: postgresql://ironscout:ironscout_dev@localhost:5432/ironscout_dev
DATABASE_URL="postgresql://username:password@localhost:5432/ironscout"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -hex 32
# MUST match across all apps (web, api, admin, merchant)
NEXTAUTH_SECRET=""

# OAuth Providers (example)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# API Configuration
API_URL="http://localhost:8000"

# DaaS Configuration (POST-MVP)
DAAS_API_KEY="your-daas-api-key"
DAAS_ENCRYPTION_KEY="your-encryption-key"

# Slack
SLACK_DATAFEED_ALERTS_WEBHOOK_URL="https://hooks.slack.com/services/your/webhook/url"

# OpenAI API (embeddings + AI-assisted search parsing)
# Optional for parsing - falls back to local regex parsing if not set
# Required for semantic search embeddings
OPENAI_API_KEY=""

# Datafeed File Logging
# Per-run log files at: logs/datafeeds/affiliate/<retailer>/<timestamp>.log
# Levels: debug, info, warn, error, fatal (default: info)
DATAFEED_FILE_LOG_LEVEL="info"
