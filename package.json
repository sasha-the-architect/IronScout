{
  "name": "ironscout",
  "version": "1.0.0",
  "description": "AI-powered ammunition price tracking and comparison platform",
  "private": true,
  "engines": {
    "node": ">=25.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive --filter !@ironscout/www lint",
    "type-check": "pnpm run --recursive type-check",
    "typecheck": "pnpm run type-check",
    "doc:watch": "pnpm exec tsx agents/doc-watcher/doc-watcher.ts",
    "doc:watch:head": "pnpm exec tsx agents/doc-watcher/watch-head.ts",
    "generate:icons": "node scripts/generate-icons.mjs",
    "db:check": "pnpm --filter @ironscout/db check",
    "db:check:fast": "pnpm --filter @ironscout/db check:fast",
    "db:check:strict": "pnpm --filter @ironscout/db check:strict",
    "db:check:drift": "pnpm --filter @ironscout/db check:drift",
    "db:generate": "pnpm --filter @ironscout/db db:generate",
    "db:migrate": "pnpm --filter @ironscout/db db:migrate",
    "db:migrate:dev": "pnpm --filter @ironscout/db db:migrate:dev",
    "db:migrate:deploy": "pnpm --filter @ironscout/db db:migrate:deploy",
    "db:migrate:status": "pnpm --filter @ironscout/db db:migrate:status",
    "db:studio": "pnpm --filter @ironscout/db db:studio",
    "db:up": "docker compose -f docker/docker-compose.dev.yml up -d postgres",
    "db:down": "docker compose -f docker/docker-compose.dev.yml down",
    "db:reset": "pnpm db:down && docker compose -f docker/docker-compose.dev.yml up -d postgres && sleep 2 && pnpm --filter @ironscout/db prisma migrate reset --force",
    "test:up": "docker compose -f docker/docker-compose.test.yml up -d --wait",
    "test:down": "docker compose -f docker/docker-compose.test.yml down",
    "test:api": "pnpm --filter @ironscout/api test:run",
    "test:harvester": "pnpm --filter @ironscout/harvester test:run",
    "test:db": "pnpm --filter @ironscout/db test",
    "test:e2e": "playwright test",
    "test:unit": "pnpm --filter @ironscout/api test:run && pnpm --filter @ironscout/db test:run && pnpm --filter @ironscout/crypto test:run",
    "test:integration": "pnpm --filter @ironscout/api test:integration && pnpm --filter @ironscout/harvester test:integration && pnpm --filter @ironscout/db test:integration && pnpm --filter @ironscout/web test:integration && pnpm --filter @ironscout/admin test:integration && pnpm --filter @ironscout/merchant test:integration",
    "test": "pnpm run lint && pnpm run typecheck && pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e && pnpm run test:harvester",
    "preflight": "node scripts/preflight.mjs",
    "preflight:quick": "node scripts/preflight.mjs --skip-build",
    "preflight:verbose": "node scripts/preflight.mjs --verbose",
    "start:all": "node scripts/dev/start-all.mjs",
    "start:dev": "node scripts/dev/start-all.mjs --terminals",
    "stop:all": "node scripts/dev/stop-all.mjs",
    "logs": "node scripts/dev/logs.mjs",
    "build:all": "node scripts/build/build-all.mjs",
    "verify:all": "node scripts/build/verify-all.mjs",
    "validate:schema": "node scripts/validate-db-schema.mjs",
    "dev:www": "pnpm --filter @ironscout/www dev",
    "build:www": "pnpm --filter @ironscout/www build"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "overrides": {
      "@prisma/dev>hono": ">=4.11.4"
    }
  }
}
