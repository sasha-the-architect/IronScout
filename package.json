{
  "name": "ironscout",
  "version": "1.0.0",
  "description": "AI-powered ammunition price tracking and comparison platform",
  "private": true,
  "engines": {
    "node": ">=25.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "type-check": "pnpm run --recursive type-check",
    "doc:watch": "pnpm exec tsx agents/doc-watcher/doc-watcher.ts",
    "doc:watch:head": "pnpm exec tsx agents/doc-watcher/watch-head.ts",
    "generate:icons": "node scripts/generate-icons.mjs"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.26.1"
}
